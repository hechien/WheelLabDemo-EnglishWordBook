<div class="span12">
  <p id="notice"><%= notice %></p>

  <p>
    <b>User:</b>
    <%= @word.user %>
  </p>

  <p>
    <b>Raw:</b>
    <%= @word.raw %>
  </p>

  <p>
    <b>Translate:</b>
    <%= @word.translate %>
  </p>


  <%= link_to 'Edit', edit_word_path(@word) %> |
  <%= link_to 'Back', words_path %>

  <% @comments.each do |comment| %>
    <div class="comment-item" id="comment-<%= comment.id %>">
      <p><%= comment.user[:email] %> 說：<br /><%= comment[:content] %></p>
    </div>
  <% end %>
</div>